<apex:page standardController="Contact" extensions="ContactExtController">
    <apex:form >
        <apex:pageBlock title="Contact Edit">
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!saveContactAndOppty}"/>
                <apex:commandButton value="Cancel" action="{!Cancel}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Contact Information">
                <apex:inputField value="{!Contact.FirstName}"/>
                <apex:inputField value="{!Contact.Email}"/>
                <apex:inputField value="{!Contact.LastName}"/>
                <apex:inputField value="{!Contact.Phone}"/>
                <apex:inputField value="{!Contact.AccountId}" required="true"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="Opportunity Information">
                <apex:inputField value="{!ContactOpportunity.Name}"/>
                <apex:inputField value="{!ContactOpportunity.Amount}"/>
                <apex:inputField value="{!ContactOpportunity.StageName}"/>
                <apex:inputField value="{!ContactOpportunity.CloseDate}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>